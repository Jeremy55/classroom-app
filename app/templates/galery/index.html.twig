{% extends 'index.html.twig' %}

{% block title %}Galery index{% endblock %}

{% block body %}
    <h1>Galery index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for galery in galeries %}
            <tr>
                <td>{{ galery.id }}</td>
                <td>{{ galery.name }}</td>
                <td>
                    <a href="{{ path('galery_show', {'id': galery.id}) }}">show</a>
                    <a href="{{ path('galery_edit', {'id': galery.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('galery_new') }}">Create new</a>
{% endblock %}
